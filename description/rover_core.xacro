<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <xacro:include filename="inertial_macros.xacro"/>
    <xacro:include filename="colors.xacro"/>

    <!-- Create Base Link -->
    <link name="base_link">
    </link>

    <!-- Chassis-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.5 0.3 0.2"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.5 0.3 0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="22" x="0.5" y="0.3" z="0.2">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>

    </link>

    <!-- Suspension-->

    <!-- WHEELS -->

    <!-- Left Front -->
    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.155 0.15 -.15" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.017"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.017"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass ="0.1" length="0.017" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <!-- Left Back -->
    <joint name="left_back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <origin xyz="-0.155 0.15 -.15" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.017"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.017"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass ="0.1" length="0.017" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Right Front -->
    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.155 -0.15 -.15" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1" />
    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.017"/>
            </geometry>
            <material name="white"/>
            </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.017"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass ="0.1" length="0.017" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Right Back -->
    <joint name="right_back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <origin xyz="-0.155 -0.15 -.15" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1" />
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.017"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.017"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass ="0.1" length="0.017" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>




</robot>